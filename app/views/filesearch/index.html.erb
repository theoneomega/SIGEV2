<div class='row-fluid'>
  <div class='span12 box bordered-box blue-border' style='margin-bottom:0;'>
    <div class='box-header blue-background'>
      <div class='title'><%= t(:listing) %> <%= t(:files) %>  </div>
      <div class='actions'>
        <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
        </a>
      </div>
    </div>
    <div class='box-content box-no-padding'>
      <div class='responsive-table'>
        <div class='scrollable-area'>
          <table class='data-table-column-filter table table-bordered table-striped' style='margin-bottom:0;'>
            <thead>
            <tr>
              <th>ID</th>

              <th><%= t '.upload' %></th>
              <th><%= t '.event_date' %></th>
              <th><%= t'.content'  %></th>


            </tr>
            </thead>
            <tbody>
            <% @files.each do |event| %>
                <tr>
                  <% if can? :show, Eventfile %>
                      <td><%= link_to event.id, event, :class => 'btn btn-info btn-mini' %></td>
                  <% else %>
                      <td><%= label event.id, event.id, :class => 'btn btn-info btn-mini' %></td>
                  <% end %>
                  <% @model = event %>

                  <td><%= link_to '<span class="badge badge-important"><i class="icon-file-alt icon-spin" ></i></span> Archivo'.html_safe, event.upload_url %> </td>
                  <td><%= I18n.l event.created_at, :format => :short %></td>
                  <td><%= event.pdf_text %></td>

            <% end %>
            </tr>
            </tbody>
            <tfoot>
            <tr>
              <th>ID</th>
              <th>priority</th>
              <th>status</th>
              <th>contenido</th>
            </tr>
            </tfoot>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>
