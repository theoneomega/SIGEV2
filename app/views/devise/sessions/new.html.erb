<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row-fluid">
    <div class="span12 icon-over-input">
        <%= f.text_field :username, autofocus: true, :class => "span12", :placeholder => "Username"%>
      <i class="icon-user muted"></i>
    </div>
  </div>

<div class="row-fluid">
    <div class="span12 icon-over-input">
    <%= f.password_field :password, autocomplete: "off", :class => "span12", :placeholder => "Password" %>
      <i class="icon-lock muted"></i>
    </div>
</div>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit t(:login), :class => "btn btn-block btn-success" %></div>
<% end %>

