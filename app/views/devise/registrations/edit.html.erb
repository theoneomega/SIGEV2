<h2 class="text-center">
  <%= t(:edit_record) %>
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row-fluid">
    <div class="span12 icon-over-input">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, :class => "span12" %>
      <i class="icon-envelope muted"></i>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12 icon-over-input">
      <%= f.label :username %>
      <%= f.text_field :username, :class => "span12"%><br>
      <i class="icon-user muted"></i>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row-fluid">
    <div class="span12 icon-over-input">
      <%= f.label :password %> <i>(Dejar en blanco si no se desea cambiar la contraseña actual)</i><br />
      <%= f.password_field :password, autocomplete: "off", :class => "span12" %>
       <i class="icon-lock muted"></i>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12 icon-over-input">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",:class => "span12" %>
      <i class="icon-lock muted"></i>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12 icon-over-input">
      <%= f.label :current_password %> <i>(es necesaria la contraseña actual para confirmar los cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", :class => "span12" %>
      <i class="icon-lock muted"></i>
    </div>
  </div>

    <div><%= f.submit :class => "btn btn-success btn-block" %></div>
<% end %>

  <%= link_to :back, :class => "btn btn-block btn-inverse" do%>
    <i class="icon-mail-reply"></i> <%= t(:back) %>
  <% end %>